 <div class="article">
        <div class="article-image">
          <%= image_tag(article.image_url, :class => "img-responsive img-rounded", :style => 'min-width:300px') %>
        </div>
        <div class="article-title">
          <%= link_to article.title, article, :style => 'color:#333' %>
        </div>
        <div class="article-author">
          Published by <%= User.find(article.user_id).first_name %> on <%= article.created_at.strftime("%A, %d.%m.%Y") %>
        </div>
        <div class="article-body">
          <%= article.body %>
        </div>
        <div class="options">
        <%= link_to 'Read', article, class: "btn btn-default" %>

        <% if can? :manage, article %>

        <%= link_to 'Edit', edit_article_path(article), class: "btn btn-default" %>
        <%= link_to 'Delete', article, class: "btn btn-default", method: :delete, data: { confirm: 'Are you sure?' } %>

        <% end %>

        </div>
        <hr>
      </div>