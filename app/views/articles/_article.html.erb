 <div class="article">
        <div class="article-image">
          <%= image_tag(article.image_url, :class => "img-responsive img-rounded", :style => 'min-width:300px') %>
        </div>
        <div class="article-title">
          <%= link_to article.title, article, :style => 'color:#333' %>
        </div>
        <div class="article-author">
          Published by <%= article.author %> on <%= article.created_at.strftime("%A, %d.%m.%Y") %>
        </div>
        <div class="article-body">
          <%= article.body %>
        </div>
        <div class="options">
        <%= link_to 'Show', article %>
        <%= link_to 'Edit', edit_article_path(article) %>
        <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
        <hr>
      </div>