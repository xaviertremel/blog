 <div class="article-show">
        <div class="article-image">
          <%= image_tag(@article.image_url, :class => "img-responsive img-rounded", :style => 'min-width:300px') %>
        </div>
        <div class="article-title">
          <%= @article.title %>
        </div>
        <div class="article-author">
          Published by <%= @article.user.first_name %> on <%= @article.created_at.strftime("%A, %d.%m.%Y") %>
        </div>
        <div class="article-body">
          <%= @article.body %>
        </div>
        <div class="article-comments">
          <h4>Comments:</h4>
          <%= render @comments %>
          <%= will_paginate @comments %>

        </div>
        <div class="article-new-comment">

        <% if !user_signed_in? %>

         <p>Please <%= link_to "sign in", new_user_session_path %> to leave a comment </p>
        
        <% else %>


          <%= render "called_new_comment" %>

        <% end %>

        </div>
        <br/>
        <div class="options">

        <% if can? :manage, @article %>

        <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-default" %>
        <%= link_to 'Delete', @article, class: "btn btn-default", method: :delete, data: { confirm: 'Are you sure?' } %>

        <% end %>

        <%= link_to 'Back', articles_path, class: "btn btn-default" %>
        </div>
        <hr>
      </div>
